  html, body {
    font-family "Ubuntu", Helvetica, Arial, sans-serif
    -webkit-font-smoothing antialiased
    color $font-color
    background-color #fff
    overflow-x hidden

    .application.theme--light {
      color $font-color
      font-family "Ubuntu", Helvetica, Arial, sans-serif
      font-size 16px
    }
  }

  @media only screen and (min-width: 1904px)
    .container {
      max-width 1185px
    }

  @media only screen and (min-width: 1920px)
    .container {
      max-width 1785px
    }

  * {
    &:focus {
      outline: none
    }
  }

  .v-content {
    background-color #fff
  }

  a {
    text-decoration none
    color: $blue-brand-color

    &:hover {
      text-decoration underlineYtn
    }
  }

  .width-100 {
    width 100%
  }

  .width-170 {
    width 170px
  }

  .v-btn {
    text-transform none
  }

  .white-color {
    color: #fff
  }

  .without-details {
    .input-group__details {
      display none
    }
  }

  .boodet-theme .boodet-btn {
    cursor: pointer;
    color: $font-color;
    font-size 18px
    line-height 24px
    padding: 0.4em 0.8em;
    display: inline-block;
    text-decoration: none;
    border-style: solid;
    border-width: 2px;
    border-color: transparent;
    border-image: linear-gradient(to right, $red-brand-color 0%, #c45492 50%,  $blue-brand-color 100%);
    border-image-slice: 1;
    transition: all 0.3s ease;
    text-align center

    &:hover {
      background: #fff;
      color: #2c4edd;
    }

    &:active {
      border-image: none;
    }

    &:disabled {
      color: gray
      cursor default
      border-image none
      border-color gray
    }

    &.width-170 {
      width 170px
    }

    &.width-270 {
      width 270px
    }

    &.white-bg {
      color: #000;

      &:hover {
        color: $blue-brand-color;
      }
    }

  }

  .boodet-theme .simple-btn {
    color $blue-brand-color
    font-family 'Source Sans Pro', sans-serif
    padding 0.4em 0.8em

    &:hover {
      color darken($blue-brand-color, 10%)
    }
  }

  .blue-color {
    color: $blue-brand-color
  }

  ul.menu-list {
    background-color $blue-brand-color
    color: #fff
    padding 10px 0
    font-size 12px
    list-style-type none

    /*&::before {
      content: '';
      position: absolute;
      top: -4px
      left: 80px
      border: 4px solid transparent;
      border-bottom: 5px solid $blue-brand-color;
      background-color transparent
    }*/

    li {
      padding 2px 30px
      text-align center
      cursor pointer

      &:hover {
        background-color rgba(255, 255, 255, 0.2)
      }
    }
  }

  .menu__content {
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
    border-radius: 0
  }

  .blue-circle-divider {
    display inline-block
    width 4px
    height 4px
    background $blue-brand-color
    border-radius 2px
    margin 0 13px
    margin-bottom 4px
  }

  .sans-pro {
    font-family 'Source Sans Pro', sans-serif
  }

  .divider-40 {
    height 40px
    background #f2f3f6
    font-size 12px
    font-weight bold
    line-height 2
    font-family 'Source Sans Pro', sans-serif
    padding 8px 20px
  }

  .link {
    color $blue-brand-color
    cursor pointer
  }

  .layout {
    .flex.form-group {
      &:not(:last-child) {
        padding-right 15px
      }

      &:not(:first-child) {
        padding-left 15px
      }

    }
  }

  .menu-list {
    a {
      color: #fff
    }
  }


  .v-dialog {
    background-color #fff
    border-radius 0
    padding 22px 30px 30px
    position relative

    .close-btn {
      position absolute
      width 11px
      height 11px
      top 20px
      right 20px
      cursor pointer

      svg {
        height 100%
        display block


        &:hover {
          .cross {
            stroke darken($red-brand-color, 20%)
          }
        }
      }
    }

    .dialog-title {
      font-size 32px
      font-weight bold
      line-height 36px
    }
  }

  .bordered-block__15-20 {
    border 1px solid rgba(0,0,0,0.05)
    padding 15px 20px 20px
  }

  .v-tabs__container {
    height 60px
  }

  .v-tabs__div {
    text-transform none
    font-weight 400
    height 60px
    color $font-color
    margin-right 60px

    .v-tabs__item {
      height 60px
      padding 20px 20px 20px 62px
      position relative
      font-size 15px
      font-family 'Source Sans Pro', sans-serif

      &.v-tabs__item--active {
        color: $blue-brand-color
        font-weight 600
      }

      &::before {
        content: "1";
        display: block;
        height: 26px;
        width: 26px;
        border-radius 50%;
        background: #fff;
        position: absolute;
        top: 17px;
        left: 20px;
        line-height 26px
        color: $font-color
        font-weight 400
      }
    }

    &:nth-child(3) {
      .v-tabs__item {
        &::before {
          content "2"
        }
      }
    }

    &:nth-child(4) {
      .v-tabs__item {
        &::before {
          content "3"
        }
      }
    }

    &:nth-child(5) {
      .v-tabs__item {
        &::before {
          content "4"
        }
      }
    }
  }

  .v-tabs__slider-wrapper {
    display none
  }

  label.require, textarea.require {
    &:after {
      content: '*';
      color: $red-brand-color
    }
  }

  .divider-40 {
    position relative
  }

  .chip .chip__content {
    height 18px
    border-radius 20px
    color #fff
    padding 0 8px
  }

  .prodyct-name-input {
    font-size 32px
    font-weight 700

    &:focus {
      background-color #d5d9e5
    }
  }

  .no-shrink {
    .flex {
      flex 0 1 auto
    }
  }

  .blue-brand-color {
    color $blue-brand-color
  }

  .product-navigation {
    padding-right 40px
    .nav-item {
      cursor pointer
      font-size 14px
      line-height 18px
      color: #1a173b
      margin-bottom 10px
      opacity 0.7

      &.active {
        font-weight 700
        color $blue-brand-color
        opacity 1
      }

      &.disabled {
        opacity 0.3
        cursor default
      }
    }
  }

  .dd-flex {
    display flex

    &.wrap {
      flex-wrap wrap
    }
  }

  .default-text {
    font-size 16px!important;
    font-weight 400!important
  }

  .back-icon {
    height 8px
    transform rotate(90deg)
    margin-right 6px
  }

  .theme--light .v-label, .application .theme--light.v-label {
    color: $font-color;
  }
